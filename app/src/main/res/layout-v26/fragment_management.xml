<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#70A2C2"
  android:padding="@dimen/half_dynamic_spacing"
  tools:context=".controller.HomeFragment">

  <Spinner
    style="@style/TextAppearance.MaterialComponents.Subtitle1"
    android:id="@+id/group_management"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/half_dynamic_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:contextClickable="true"
    android:tooltipText="Groups"/>


  <androidx.appcompat.widget.AppCompatButton
    style="@style/CardView.Dark"
    android:backgroundTint="#4c8bb3"
    android:id="@+id/create_group"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:text="@string/add_group"
    app:layout_constraintTop_toBottomOf="@id/group_management"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/add_user"/>

  <androidx.appcompat.widget.AppCompatButton
    style="@style/CardView.Dark"
    android:backgroundTint="#4c8bb3"
    android:id="@+id/add_user"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:text="@string/add_member"
    app:layout_constraintTop_toBottomOf="@id/create_group"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/add_task"/>

  <androidx.appcompat.widget.AppCompatButton
    style="@style/CardView.Dark"
    android:backgroundTint="#4c8bb3"
    android:id="@+id/add_task"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:text="@string/add_task"
    app:layout_constraintTop_toBottomOf="@id/add_user"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/delete_group"/>

  <androidx.appcompat.widget.AppCompatButton
    style="@style/CardView.Dark"
    android:backgroundTint="#4c8bb3"

    android:id="@+id/delete_group"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:text="@string/delete_group"
    app:layout_constraintTop_toBottomOf="@id/add_task"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/delete_member"/>


  <androidx.appcompat.widget.AppCompatButton
    style="@style/CardView.Dark"
    android:backgroundTint="#4c8bb3"
    android:id="@+id/delete_member"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:text="@string/delete_member"
    app:layout_constraintTop_toBottomOf="@id/delete_group"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>