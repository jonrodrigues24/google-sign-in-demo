<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.HomeFragment">

  <Spinner
   android:accessibilityPaneTitle="Groups"
    android:id="@+id/group_management"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:contextClickable="true"
    android:tooltipText="Groups"/>


  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/create_group_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/group_management"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:hintEnabled="true"

    >

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/create_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:inputType="text"
      android:hint="@string/create_group_hint"/>
  </com.google.android.material.textfield.TextInputLayout>


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/add_user"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="ADD USER"
    app:layout_constraintTop_toBottomOf="@id/create_group_layout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/add_task"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="ADD TASK"
    app:layout_constraintTop_toBottomOf="@id/add_user"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/delete_group"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="DELETE GROUP"
    app:layout_constraintTop_toBottomOf="@id/add_task"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/delete_member"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="DELETE MEMBER"
    app:layout_constraintTop_toBottomOf="@id/delete_group"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>