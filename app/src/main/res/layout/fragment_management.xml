<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/half_dynamic_spacing"
  tools:context=".controller.HomeFragment">

  <Spinner
   android:accessibilityPaneTitle="Groups"
    android:id="@+id/group_management"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/half_dynamic_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:contextClickable="true"
    android:tooltipText="Groups"/>


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/create_group"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="Add Group"
    app:layout_constraintTop_toBottomOf="@id/group_management"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/add_user"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="ADD USER"
    app:layout_constraintTop_toBottomOf="@id/create_group"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/add_task"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="ADD TASK"
    app:layout_constraintTop_toBottomOf="@id/add_user"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/delete_group"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="DELETE GROUP"
    app:layout_constraintTop_toBottomOf="@id/add_task"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/delete_member"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:text="DELETE MEMBER"
    app:layout_constraintTop_toBottomOf="@id/delete_group"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>